namespace ConsoleApp2
{
    class Program
    {
        static void Main(string[] args)
        {
            int a = 5;
            int b = 2;
            System.Console.WriteLine("a = " + a + ",b= " + b);

            int result = a + b;
            System.Console.WriteLine("Сложение, a + b= " + result);

            result = a * b;
            System.Console.WriteLine("Умножение, a * b= " + result);

            result = a / b;
            System.Console.WriteLine("Деление, a/ b = " + result + " деление нацело");

            double resultDouble = a / b;
            System.Console.WriteLine("Деление a/b= " + resultDouble + " c остатком");

            System.Console.ReadLine();
        }
    }
}
