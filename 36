using System;

namespace ConsoleApp36
{
    class Calculator {
        public void Add(int a, int b) 
        {
            int result = a + b;
            Console.WriteLine("Cyммa1 = " + result);
        }
        public void Add(int a, int b, int c)
        {
            int result = a + b + c;
            Console.WriteLine("Сумма2 = " + result);
        }
        public int Add(int a, int b, int c, int d) 
        {
            int result = a + b + c + d;
            Console.WriteLine("Сумма3 = "+result);
            return result;
        }
        public void Add(double a, double b)
        {
            double result = a + b;
            Console.WriteLine("Cумма4 = " + result);
        }
    }
    class Program
    {
        static void Main(string[] args)
        {
            Calculator calc = new Calculator();
            calc.Add(1, 2); 
            calc.Add(1, 2, 3); 
            calc.Add(1, 2, 3, 4); 
            calc.Add(1.4, 2.5); 

            Console.ReadKey();

        }
    }
}
